<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/newBlue"
                android:layout_weight="0.2">
                <LinearLayout
                    android:id="@+id/ly1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/newBlue">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40ssp"
                        android:backgroundTint="@color/newBlue"
                        android:layout_margin="@dimen/_3ssp"
                        android:elevation="@dimen/_7ssp"
                        app:cardElevation="@dimen/_7ssp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="5">
                            <LinearLayout
                                android:id="@+id/menu_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5ssp">
                                <ImageView
                                    android:layout_width="@dimen/_30ssp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/menu" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:layout_marginRight="@dimen/_15ssp"
                                android:gravity="center"
                                android:layout_gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Welcome"
                                    android:textSize="@dimen/_15ssp"
                                    android:layout_marginRight="@dimen/_5ssp"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/_20ssp"
                                    android:text="Rohit malviya"
                                    android:textSize="@dimen/_15ssp"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_5ssp">
                                <ImageView
                                    android:layout_width="@dimen/_35ssp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/user_icon"/>
                            </LinearLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:orientation="vertical"
                android:background="@drawable/layer_second">
                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_70ssp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_10ssp"
                        android:layout_margin="@dimen/_7ssp"
                        android:elevation="@dimen/_10ssp"
                        app:cardElevation="@dimen/_10ssp"
                        android:backgroundTint="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/_50ssp"
                                    android:layout_height="@dimen/_55ssp"
                                    android:layout_gravity="center"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_25ssp"
                                    android:gravity="center"
                                    android:textSize="@dimen/_12ssp"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/txUsername"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="@dimen/_13ssp"
                                    android:text="Rohit malviya"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_15ssp"
                                    android:text="USERNAME"
                                    android:gravity="center"
                                    android:textSize="@dimen/_11ssp"
                                    android:textColor="@color/black"/>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl1"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl1"
                        android:layout_weight="2.5"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_220sdp"
                            android:layout_height="@dimen/_40ssp"
                            android:layout_margin="@dimen/_10ssp"
                            app:cardCornerRadius="@dimen/_5ssp"
                            app:cardElevation="@dimen/_7ssp"
                            android:elevation="@dimen/_7ssp">
                            <ImageView
                                android:layout_width="54dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="80sp"
                                android:layout_marginLeft="5sp"
                                android:src="@drawable/search_bar" />
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:textSize="@dimen/_10ssp"
                                android:hint="Find for food or restaurant..."
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:layout_marginLeft="@dimen/_8ssp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl1"
                        android:layout_weight="1.5"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="70sp"
                            android:layout_height="@dimen/_40ssp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10ssp"
                            app:cardCornerRadius="@dimen/_7ssp"
                            app:cardElevation="@dimen/_10ssp"
                            android:elevation="@dimen/_5ssp">
                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="31dp"
                                android:layout_gravity="center"
                                android:src="@drawable/filter" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>





    </RelativeLayout>


</FrameLayout>