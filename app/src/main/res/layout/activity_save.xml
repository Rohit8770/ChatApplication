<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Demo.SaveActivity">

    <LinearLayout
        android:id="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/newBlue">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:backgroundTint="@color/newBlue"
            android:elevation="@dimen/_7ssp"
            app:cardElevation="@dimen/_7ssp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">
                <LinearLayout
                    android:id="@+id/ly_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10ssp">
                    <ImageView
                        android:layout_width="@dimen/_30ssp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_back" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_marginRight="@dimen/_15ssp"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Page"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_15ssp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll7"
        android:layout_below="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Page:-"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_25ssp"
            android:layout_margin="@dimen/_20ssp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_40ssp"
        android:gravity="center">

    <ImageView
        android:id="@+id/img_Data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:src="@drawable/logo"/>
        <!--<ImageView
            android:id="@+id/img_Data1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:src="@drawable/logo"/>-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_70ssp"
        android:gravity="center">

        <TextView
            android:id="@+id/txtData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hlo"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_140sdp"
            android:gravity="center"/>
    </LinearLayout>
    </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll7"
        android:layout_marginTop="@dimen/_15ssp"
        android:layout_marginLeft="@dimen/_130sdp"
        android:text="Save"
        android:textSize="@dimen/_15ssp" />

    <!--<ImageView
        android:id="@+id/img_Data1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:src="@drawable/logo"/>-->


</RelativeLayout>